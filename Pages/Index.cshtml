@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="display: flex; justify-content: center; align-items: center; min-height: 70vh; background: none;">
    <div style="background: #fff5ed; border-radius: 20px; box-shadow: 0 2px 12px rgba(0,0,0,0.04); padding: 2.5rem 2.5rem 2.5rem 2rem; max-width: 600px; width: 100%; margin-right: 2rem;">
        <div style="display: flex; align-items: center; margin-bottom: 1.5rem;">
            <img src="~/image/panote-icon.png" alt="Pa-Note Icon" style="width: 48px; height: 48px; border-radius: 50%; background: #fff; border: 2px solid #f2dfd2; margin-right: 12px;" />
            <span style="font-size: 2rem; font-weight: bold; color: #222;">Pa-Note</span>
        </div>
        <h1 style="font-size: 2.1rem; font-weight: bold; color: #222; margin-bottom: 1rem;">Pa-Note: Where Tasks Go Bald, Not You!</h1>
        <p style="font-size: 1.1rem; color: #444; margin-bottom: 2.2rem;">
            Welcome to Pa-Note – the only task management app that keeps your to-do list smooth, clean, and hair-free!<br />
            Whether you're overwhelmed by assignments, chores, or that one thing you've been ignoring for weeks, Pa-Note helps you shed the stress (and maybe a few brain cells) by organizing your tasks before your hair starts falling out.
        </p>
        <div style="display: flex; gap: 1rem; margin-bottom: 1.2rem;">
            <a href="/" style="background: #ed9548; color: #fff; font-weight: bold; padding: 0.8rem 1.6rem; border-radius: 10px; text-decoration: none; font-size: 1.1rem; box-shadow: 0 2px 6px rgba(0,0,0,0.04);">Get Started</a>
        </div>
        <div style="display: flex; gap: 1rem;">
            <a href="/Account/Login" style="background: #fff; color: #222; border: 2px solid #d48459; font-weight: bold; padding: 0.7rem 2.2rem; border-radius: 8px; text-decoration: none; font-size: 1rem;">Log in</a>
            <a href="/Account/Register" style="background: #fff; color: #fff; background: #ed9548; font-weight: bold; padding: 0.7rem 2.2rem; border-radius: 8px; text-decoration: none; font-size: 1rem;">Register</a>
        </div>
    </div>
    <div style="display: flex; align-items: center; justify-content: center; height: 100%;">
        <!-- Illustration: Use a placeholder or add your own image here -->
        <img src="~/image/bald.png" alt="Bald Cartoon" style="width: 180px; height: 180px; border-radius: 50%; background: #fff; border: 2px solid #f2dfd2; box-shadow: 0 2px 8px rgba(0,0,0,0.04);" />
    </div>
</div>