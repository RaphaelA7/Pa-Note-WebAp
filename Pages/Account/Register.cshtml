@page
@model WebApplication5.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (TempData["RegisterMessage"] != null)
{
    <div style="color: #fff; background: #ed9548; padding: 0.7rem 1rem; border-radius: 8px; margin-bottom: 1rem; text-align: center;">
        @TempData["RegisterMessage"]
    </div>
}

<h2>Register</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <label>First Name:</label>
    <input asp-for="Input.FirstName" class="form-control" />
    <label>Last Name:</label>
    <input asp-for="Input.LastName" class="form-control" />
    <label>Email:</label>
    <input asp-for="Input.Email" class="form-control" />
    <label>Password:</label>
    <input asp-for="Input.Password" type="password" class="form-control" />
    <label>Confirm Password:</label>
    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
    <button type="submit" class="btn btn-success mt-2">Register</button>
</form>