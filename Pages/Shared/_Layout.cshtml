<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pa-Note</title>

    <!-- Pa-Note Warm Style -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-color: #fdf8f3; font-family: 'Segoe UI', sans-serif; color: #333;">
    <header style="padding: 1rem 0; background-color: #fff5ed; border-bottom: 2px solid #f2dfd2;">
        <div style="max-width: 900px; margin: auto; display: flex; justify-content: space-between; align-items: center;">
            <div style="display: flex; align-items: center;">
                <img src="~/image/panote-icon.png" alt="Pa-Note Icon" style="width: 40px; height: 40px; margin-right: 10px;" />
                <h1 style="font-size: 1.5rem; margin: 0;">Pa-Note</h1>
            </div>
            <nav></nav>
        </div>
    </header>

    <main style="max-width: 900px; margin: 2rem auto; padding: 1rem;">
        @RenderBody()
    </main>

    <footer style="text-align: center; padding: 1rem; background-color: #fff5ed; border-top: 2px solid #f2dfd2; color: #888;">
        &copy; 2025 - Pa-Note - Organize Smarter, Stress Less
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
